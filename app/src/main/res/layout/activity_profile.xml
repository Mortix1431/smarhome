<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <LinearLayout
        android:id="@+id/back_black"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="@color/blackbut"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal" />
    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/btn_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:onClick="back"
        android:focusable="true"/>
    <TextView
        android:id="@+id/profile_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Профиль"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        android:textSize="18sp"/>
    <ImageView
        android:id="@+id/avatar_img"
        android:layout_below="@+id/profile_txt"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/avatar"/>
    <LinearLayout
        android:layout_below="@+id/back_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="#94949B"
            android:textSize="44px"
            android:text="Имя пользователя"/>
        <EditText
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:id="@+id/login_edit"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:hint="Имя пользователя"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="#94949B"
            android:textSize="44px"
            android:text="Электронная почта"/>
        <EditText
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:id="@+id/email_edit"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:hint="E-mail"/>
        <TextView
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="#94949B"
            android:textSize="44px"
            android:layout_marginTop="10dp"
            android:text="Адрес"/>
        <EditText
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:id="@+id/adress_edit"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:hint="Адрес"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp">
        <Button
            android:layout_above="@id/profile_exit"
            android:id="@+id/profile_save"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:text="Сохранить"
            android:theme="@style/blue_btn"
            app:cornerRadius="12dp"
            android:textSize="17sp"
            android:onClick="sohran"/>
        <Button
            android:layout_below="@id/profile_save"
            android:id="@+id/profile_exit"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:text="Выйти"
            android:onClick="exit"
            android:theme="@style/very_redbtn"
            app:cornerRadius="12dp"
            android:textSize="17sp" />
    </LinearLayout>

        

</RelativeLayout>