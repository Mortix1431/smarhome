<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/streets"
    tools:context=".CreateCode">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9930CCE1"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:src="@drawable/logo"
        android:layout_marginTop="70dp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Создайте\nпин-код"
        android:textColor="@color/white"
        android:gravity="center"
        android:fontFamily="@font/montserrat_bold"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout
        android:id="@+id/dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/dot_0"
            android:src="@drawable/dot_0" />
        <ImageView
            android:layout_width="20dp"
            android:id="@+id/dot_1"
            android:layout_height="20dp"
            android:src="@drawable/dot_0"
            android:layout_marginStart="25dp"/>
        <ImageView
            android:layout_width="20dp"
            android:id="@+id/dot_2"
            android:layout_height="20dp"
            android:src="@drawable/dot_0"
            android:layout_marginStart="25dp"/>
        <ImageView
            android:layout_width="20dp"
            android:id="@+id/dot_3"
            android:layout_height="20dp"
            android:src="@drawable/dot_0"
            android:layout_marginStart="25dp"/>
    </LinearLayout>


    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="#9C30CCE1">
        <TableRow android:layout_marginTop="10dp" android:layout_marginStart="10dp" android:layout_marginEnd="10dp">
            <Button
                android:id="@+id/pass_btn1"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:text="1"
                android:tag="1"
                android:fontFamily="@font/montserrat_light"
                android:textSize="48sp"
                android:textColor="@color/black"
                android:onClick="num_click"
                android:background="@drawable/border_pin"/>
            <Button
                android:id="@+id/pass_btn2"
                android:text="2"
                android:tag="2"
                android:fontFamily="@font/montserrat_light"
                android:textSize="48sp"
                android:textColor="@color/black"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginStart="24dp"
                android:onClick="num_click"
                android:background="@drawable/border_pin"/>
            <Button
                android:id="@+id/pass_btn3"
                android:text="3"
                android:tag="3"
                android:fontFamily="@font/montserrat_light"
                android:textSize="48sp"
                android:textColor="@color/black"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginLeft="24dp"
                android:onClick="num_click"
                android:background="@drawable/border_pin"/>
        </TableRow>
        <TableRow android:layout_marginStart="10dp" android:layout_marginEnd="10dp">
            <Button
                android:id="@+id/pass_btn4"
                android:text="4"
                android:tag="4"
                android:fontFamily="@font/montserrat_light"
                android:textSize="48sp"
                android:textColor="@color/black"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginTop="24dp"
                android:onClick="num_click"
                android:background="@drawable/border_pin"/>
            <Button
                android:id="@+id/pass_btn5"
                android:text="5"
                android:tag="5"
                android:fontFamily="@font/montserrat_light"
                android:textSize="48sp"
                android:textColor="@color/black"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:onClick="num_click"
                android:background="@drawable/border_pin"/>
            <Button
                android:id="@+id/pass_btn6"
                android:text="6"
                android:tag="6"
                android:fontFamily="@font/montserrat_light"
                android:textSize="48sp"
                android:textColor="@color/black"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:onClick="num_click"
                android:background="@drawable/border_pin"/>
        </TableRow>
        <TableRow android:orientation="vertical" android:layout_marginStart="10dp" android:layout_marginEnd="10dp" android:layout_marginBottom="10dp">
            <Button
                
                android:id="@+id/pass_btn7"
                android:text="7"
                android:tag="7"
                android:fontFamily="@font/montserrat_light"
                android:textSize="48sp"
                android:textColor="@color/black"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginTop="24dp"
                android:onClick="num_click"
                android:background="@drawable/border_pin"/>
            <Button
                android:id="@+id/pass_btn8"
                android:text="8"
                android:tag="8"
                android:fontFamily="@font/montserrat_light"
                android:textSize="48sp"
                android:textColor="@color/black"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:onClick="num_click"
                android:background="@drawable/border_pin"/>
            <Button
                android:id="@+id/pass_btn9"
                android:text="9"
                android:tag="9"
                android:fontFamily="@font/montserrat_light"
                android:textSize="48sp"
                android:textColor="@color/black"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:onClick="num_click"
                android:background="@drawable/border_pin"/>
        </TableRow>

    </TableLayout>
</LinearLayout>





</RelativeLayout>