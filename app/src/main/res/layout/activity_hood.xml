<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".devices.Hood">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/blackbut"
        android:text="Вытяжка"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="20sp"
        android:gravity="center"/>
    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/btn_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:onClick="back"
        android:focusable="true"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_below="@id/header"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_edit">

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/dv_icon"
            android:src="@drawable/hood_blue1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/dv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/dv_icon"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Вытяжка"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginTop="25dp"
            android:layout_marginStart="10dp"/>
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/dv_power"
            android:theme="@style/switch_da"
            android:thumb="@drawable/switch_test"
            app:track="@drawable/switch_test_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:checked="true"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@id/dv_name"
            app:layout_constraintRight_toRightOf="parent"/>
        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/dv_icon"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/value_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="70% мощность"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/gray"/>
            <com.google.android.material.slider.Slider
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:trackColorActive="@color/bluebut"
                android:valueFrom="0"
                android:value="70"
                app:thumbRadius="5dp"
                app:thumbColor="@color/bluebut"
                android:valueTo="100"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>