<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/streets"
    tools:context=".Register">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9930CCE1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="95dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="120dp"
            android:src="@drawable/logo" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="58px"
            android:text="Умный дом"
            android:textColor="@color/white"
            android:fontFamily="@font/bold"
            android:layout_gravity="center_horizontal"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="#9C30CCE1">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:textColor="#94949B"
                android:textSize="44px"
                android:text="Имя пользователя"/>
            <EditText
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/bold"
                android:id="@+id/login_edit"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:hint="Имя пользователя"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:textColor="#94949B"
                android:textSize="44px"
                android:text="Электронная почта"/>
            <EditText
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/bold"
                android:id="@+id/email_edit"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:hint="E-mail"/>
            <TextView
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:textColor="#94949B"
                android:textSize="44px"
                android:layout_marginTop="10dp"
                android:text="Пароль"/>
            <EditText
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/bold"
                android:id="@+id/pass_edit"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:password="true"
                android:hint="Пароль"/>
        </LinearLayout>

        <Button
            android:id="@+id/reg_btn"
            android:layout_gravity="center_horizontal"
            app:cornerRadius="12dp"
            android:layout_marginTop="50dp"
            android:layout_width="270dp"
            android:layout_height="55dp"
            android:text="Регистрация"
            android:textSize="45px"
            android:theme="@style/red_btn"
            android:textColor="@color/white"
            android:fontFamily="@font/bold"
            android:onClick="register"/>
        <Button
            android:id="@+id/login_btn"
            android:layout_gravity="center_horizontal"
            app:cornerRadius="12dp"
            android:layout_marginTop="20dp"
            android:layout_width="270dp"
            android:layout_height="55dp"
            android:onClick="test_pars"
            android:text="Войти"
            android:textSize="45px"
            android:theme="@style/black_btn"
            android:textColor="@color/white"
            android:fontFamily="@font/bold"/>

    </LinearLayout>



</RelativeLayout>