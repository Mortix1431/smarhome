<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/streets"
    tools:context=".Register">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9930CCE1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="99dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="120dp"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/bold"
            android:text="Умный дом"
            android:textColor="@color/white"
            android:textSize="58px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="#9C30CCE1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/bold"
                android:text="Имя пользователя"
                android:textColor="#94949B"
                android:textSize="44px" />

            <EditText
                android:id="@+id/login_edit"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/bold"
                android:hint="Имя пользователя" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/bold"
                android:text="Электронная почта"
                android:textColor="#94949B"
                android:textSize="44px" />

            <EditText
                android:id="@+id/email_edit"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/bold"
                android:hint="E-mail" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/bold"
                android:text="Пароль"
                android:textColor="#94949B"
                android:textSize="44px" />

            <EditText
                android:id="@+id/pass_edit"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/bold"
                android:hint="Пароль"
                android:password="true" />
        </LinearLayout>

        <Button
            android:id="@+id/reg_btn"
            android:layout_gravity="center_horizontal"
            app:cornerRadius="12dp"
            android:layout_marginTop="50dp"
            android:layout_width="270dp"
            android:layout_height="55dp"
            android:text="Регистрация"
            android:textSize="45px"
            android:theme="@style/red_btn"
            android:textColor="@color/white"
            android:fontFamily="@font/bold"
            android:onClick="register"/>

        <Button
            android:id="@+id/login_btn"
            android:layout_width="270dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/bold"
            android:text="Войти"
            android:textColor="@color/white"
            android:textSize="45px"
            android:theme="@style/black_btn"
            app:cornerRadius="12dp" />

    </LinearLayout>

</RelativeLayout>